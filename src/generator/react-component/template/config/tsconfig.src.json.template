{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES5",

        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "declarationMap": true,
        "jsx": "react-jsx",

        "rootDir": "../src",
        "outDir": "../dist",

        "importsNotUsedAsValues": "preserve",
        "isolatedModules": true,

        "skipLibCheck": true
    },
    "include": ["../src"]
}
